<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a href="/"><img src="~/Images/logo.png" width="108" height="30" alt="Logo"/></a>
    <a href="/" class="navbar-brand">@ViewBag.Title</a>
</nav>
    <section id="main">
        <div class="container">
            <div class="row panel">
                <div class="col-10">
                    @RenderBody()
                </div>
                <div id="menu" class="col-2">
                    @Html.ActionLink("Home", "ShowArticles", "Articles", new { area = "" }, new { @class = "btn btn-outline-success btn-lg btn-block" })
                    @Html.ActionLink("Comments", "ShowComments", "Comments", new { area = "" }, new { @class = "btn btn-outline-success btn-lg btn-block" })
                    @Html.ActionLink("Feedback", "ShowFeedback", "Feedback", new { area = "" }, new { @class = "btn btn-outline-success btn-lg btn-block" })
                </div>
            </div>
        </div>
    </section>
    <div class="footer">
        <div class="text-center py-3">
            © 2019 Copyright:
            <a href="/" class="text-danger"> Blog.com</a>
        </div>
    </div>
    @*<footer class="bg-primary">
            <div class="text-center py-3">
                © 2019 Copyright:
                <a href="/" class="text-danger"> Blog.com</a>
            </div>
        </footer>*@

    <button onclick="topFunction()" id="scrollUp" title="Go to top">Top</button>
    <script type="text/javascript" src="@Url.Content("~/Scripts/scrollUp.js")"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
