<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>

    <nav class="navbar navbar-dark bg-primary">
        <a class="navbar-brand" href="#">@ViewBag.Title</a>
    </nav>
    <div class="container">
        <div class="row panel">
            <div class="col-10">
                @RenderBody()
            </div>
            <div id="genres" class="col-2">
                @Html.ActionLink("Home", "ShowArticles", "Articles", new { area = "" }, new { @class = "btn btn-block btn-default btn-lg" })
                @Html.ActionLink("Comments", "ShowComments", "Comments", new { area = "" }, new { @class = "btn btn-block btn-default btn-lg" })
                @Html.ActionLink("Home", "ShowArticles", "Articles", new { area = "" }, new { @class = "btn btn-block btn-default btn-lg" })
            </div>
        </div>
    </div>
    <footer class="page-footer font-small bg-primary">
        <div class="footer-copyright text-center py-3">
            © 2019 Copyright:
            <a href="/" class="text-danger"> Blog.com</a>
        </div>
    </footer>
</body>
</html>
