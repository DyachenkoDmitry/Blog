@model Blog.WebUI.ViewModel.Comments.CommentsToDisplayViewModel

@{
    ViewBag.Title = "Here you can read comments.";
}

@foreach (var comment in Model.Comments)
{
    <div class="card comment">
        <div class="card-body">
            <p>@comment.Content</p>
            <div class="pt-2">
                <a>
                    <span class="author"><b>@comment.Author</b></span>
                    <span class="date">@comment.DatePublished</span>
                </a>
            </div>
        </div>
    </div>
}

<div class="send-message">
    <form>
        <div class="form-group">
            @Html.Label("exampleInputEmail", "Name:")
            @Html.TextBox("name", "", new { @class = "form-control", type = "text", placeholder = "Type your name" })
        </div>
        <div class="form-group">
            @Html.Label("exampleFormControlTextarea", "Text:")
            @Html.TextArea("message", new { @class = "form-control", rows = 3})
        </div>
        <button type="submit" class="btn btn-primary float-right">Send message</button>
    </form>
</div>
